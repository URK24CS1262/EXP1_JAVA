import java.util.Scanner;
public class Booking {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.print("Enter the age: ");
        int age = sc.nextInt();
        System.out.print("Enter the day of booking (1.Monday, 2.Tuesday, 3.Wednesday, 4.Thursday, 5.Friday, 6.Saturday, 7.Sunday): ");
        int day = sc.nextInt();
        int price = 200;
        System.out.println("The age: " + age);
        if (day <= 5) { 
            if (age <= 5) {
                System.out.println("The ticket is free!");
            } else if (age <= 18) {
                double discount = price * 0.50; 
                System.out.println("The price of the ticket: " + discount);
            } else if (age <= 60) {
                double discount = price * 0.90; 
                System.out.println("The price of the ticket: " + discount);
            } else {
                double discount = price * 0.70; 
                System.out.println("The price of the ticket: " + discount);
            }
        } else {
            if (age <= 5) {
                System.out.println("The ticket is free!");
            } else if (age <= 18) {
                double discount = price * 0.60; 
                System.out.println("The price of the ticket: " + discount);
            } else if (age <= 60) {
                System.out.println("The price of the ticket: " + price); 
            } else {
                double discount = price * 0.70; 
                System.out.println("The price of the ticket: " + discount);
            }
        }

        
    }
}
