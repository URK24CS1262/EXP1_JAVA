import java.util.Scanner;
public class atm_system {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        double balance = 10000;
        while (true) {
            System.out.println("\n ATM Menu:");
            System.out.println("1. Check account balance");
            System.out.println("2. Deposit money");
            System.out.println("3. Withdraw money");
            System.out.println("4. Exit application");
            System.out.print("Enter your choice: ");
            int choice = sc.nextInt();
            switch (choice) {
                case 1:
                    System.out.println("The balance you have in your account: Rs. " + balance);
                    break;

                case 2:
                    System.out.print("Enter the amount to deposit: ");
                    double deposit = sc.nextDouble();
                    if (deposit > 0) {
                        balance += deposit;
                        System.out.println("Your amount is deposited successfully!");
                        System.out.println("Your account balance: Rs. " + balance);
                    } else {
                        System.out.println("Invalid deposit amount!");
                    }
                    break;

                case 3:
                    System.out.print("Enter the money to withdraw: ");
                    double withdraw = sc.nextDouble();
                    if (withdraw > 0 && withdraw <= balance) {
                        balance -= withdraw;
                        System.out.println("Rs. " + withdraw + " withdrawn successfully!");
                        System.out.println("The amount left in your account: Rs. " + balance);
                    } else {
                        System.out.println("Invalid or insufficient balance!");
                    }
                    break;

                case 4:
                    System.out.println("Exiting the application!");
                    sc.close();
                    return; 

                default:
                    System.out.println("Invalid choice! Please try again.");
            }
        }
    }
}
